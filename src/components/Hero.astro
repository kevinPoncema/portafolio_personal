---
import portafolio from '../json/portafolio.json';

const { sobre_mi } = portafolio;
---

<section class="w-full bg-gray-100 py-12">
  <div class="container mx-auto flex flex-col items-center">
    <div class="w-32 h-32 rounded-full bg-gray-300 shadow-md mb-6 flex items-center justify-center">
      {sobre_mi.img_src && <img src={sobre_mi.img_src} alt="Foto de perfil" class="rounded-full w-full h-full object-cover" />}
    </div>
    <div class="bg-white shadow-lg rounded-lg p-6 max-w-xl w-full text-center">
      <h1 class="text-2xl font-bold text-gray-800 mb-2">{sobre_mi.titulo}</h1>
      <h2 class="text-xl font-semibold text-gray-600 mb-4">{sobre_mi.nombre}</h2>
      <p class="text-gray-700 mb-4">{sobre_mi.descripcion}</p>
      <div class="flex justify-center space-x-4 mt-4">
        {sobre_mi.github && (
          <a href={sobre_mi.github} target="_blank" class="text-gray-600 hover:text-gray-800">
            <img src="/src/icons/github.svg" alt="GitHub" class="w-6 h-6" />
          </a>
        )}
        {sobre_mi.email && (
          <a href={`mailto:${sobre_mi.email}`} target="_blank" class="text-gray-600 hover:text-gray-800">
            <img src="/src/icons/gemail.svg" alt="Gmail" class="w-6 h-6" />
          </a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  section {
    padding: 3rem 0;
  }
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .rounded-full {
    background-color: #e5e7eb;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .card {
    background-color: #ffffff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    border-radius: 0.5rem;
  }
</style>
