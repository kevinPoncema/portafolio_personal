---
// Archivo: src/components/Skills.astro
import portafolio from '../json/portafolio.json';
---

<section class="w-full bg-gray-100 py-12">
  <div class="container mx-auto">
    <!-- Sección de Habilidades Técnicas -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Habilidades Técnicas</h2>
      <div class="flex flex-wrap justify-center">
        {portafolio.habilidades.tecnologias.map((tecnologia) => (
          <div class="w-1/2 md:w-1/4 p-4 text-center" key={tecnologia.nombre}>
            <img src={tecnologia.ruta} alt={tecnologia.nombre} class="w-16 h-16 mx-auto mb-2">
            <p class="text-gray-700 font-semibold">{tecnologia.nombre}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Sección de Habilidades Blandas -->
    <div>
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Habilidades Blandas</h2>
      <div class="flex flex-wrap justify-center">
        {portafolio.habilidades.blandas.map((habilidad) => (
          <div class="w-1/2 md:w-1/4 p-4 text-center" key={habilidad.nombre}>
            <span class="inline-block bg-white px-4 py-2 rounded-lg shadow-md text-gray-800 font-semibold">
              {habilidad.nombre}
            </span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-color: #f3f4f6;
    padding: 3rem 0;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .flex-wrap {
    display: flex;
    flex-wrap: wrap;
  }
  .p-4 {
    padding: 1rem;
  }
  img {
    max-width: 100%;
    height: auto;
  }
  span {
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
</style>
